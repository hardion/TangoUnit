<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-clean install</actionName>
            <displayName>clean install</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-DTANGO_HOST=tangodb:20001 -classpath %classpath TangoUnit.TangoUnit TangoUnit.TestServer</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Djava.compiler=none -Xnoagent -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -DTANGO_HOST=tangodb:20001 -classpath %classpath TangoUnit.TangoUnit TangoUnit.TestServer</exec.args>
                <jpda.listen>true</jpda.listen>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
